citHeader("To cite package 'secrIWS' in publications use:")

year <- sub(".*(2[[:digit:]]{3})-.*", "\\1", meta$Date)
vers <- paste("R package version", meta$Version)

citEntry(entry="Manual",
    title = "secrIWS: Evaluation of Spatially Explicit Capture-Recapture with Irregular Data",
    author = personList(as.person("Murray Efford")),
    year = year,
    note = vers,
    textVersion =
        paste("Efford, M. G. (", year,
        "). secrIWS: Evaluation of Spatially Explicit Capture-Recapture with Irregular Data. ",
        vers, ". ", sep = "")
)
